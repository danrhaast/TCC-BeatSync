

<main id="body">
    <div class="form">
        <form action="editar" method="POST">
            <h2>Cadastro</h2>
            <div class="fpr">
                <div class="form1">
                    <label for="nome">Nome:</label>
                    <input class="input" type="text" id="nome" name="nome" value=" <%= userNome %>" required>
                </div>

                <div class="form1">
                    <label for="email">Email:</label>
                    <input class="input" type="text" id="email" name="email" value="<%= userEmail %>" required>
                </div>

                <div class="form1">
                    <label for="dataNasc">Data de Nascimento:</label>
                    <input class="input" type="date" id="dataNasc" name="dataNasc" value="<%= userData_nasc %>" required>
                </div>

                <div class="form1">
                    <label for="peso">Peso:</label>
                    <input class="input"  type="text" id="peso" name="peso" value="<%= userPeso %>" required>
                </div>

                <div class="form1">
                    <label for="altura">Altura:</label>
                    <input class="input"  type="text" id="altura" name="altura" value="<%= userAltura %>" required>
                </div>

                <div class="form1">
                    <label for="genero">Gênero:</label>
                    <br>
                    <select id="genero" name="genero" required>
                        <option value="Masculino" <%= userGenero === "Masculino" ? "selected" : "" %>>Masculino</option>
                        <option value="Feminino" <%= userGenero === "Feminino" ? "selected" : "" %>>Feminino</option>
                        <option value="Outro" <%= userGenero === "Outro" ? "selected" : "" %>>Outro</option>
                    </select>
                </div>

                <div class="form1">
                    <label for="senha">Senha:</label>
                    <input class="input" type="password" id="senha" name="senha" value="userSenha" required>
                </div>

                <div class="btn">
                    <button class="botao" type="submit">Salvar Alterações</button>
                </div>
            </div>
        </form>
    </div>
</main>